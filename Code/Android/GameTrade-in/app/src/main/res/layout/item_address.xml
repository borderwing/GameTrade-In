<?xml version="1.0" encoding="utf-8"?>
<!--item -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Address -->
    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/addressDetail" />-->


    <!-- AddressId -->
    <TextView
        android:id="@+id/itemAddressDetailAddressId"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentLeft="true"
         />

    <!-- Receiver -->
    <TextView
        android:id="@+id/itemAddressDetailReceiver"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_toRightOf="@id/itemAddressDetailAddressId"
         />

    <!-- Phone -->
    <TextView
        android:id="@+id/itemAddressDetailPhone"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
         />

    <!-- Address -->
    <TextView
        android:id="@+id/itemAddressDetailAddress"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentRight="true"
         />

    <!-- Region -->
    <TextView
        android:id="@+id/itemAddressDetailRegion"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_toLeftOf="@id/itemAddressDetailAddress"
         />


</RelativeLayout>