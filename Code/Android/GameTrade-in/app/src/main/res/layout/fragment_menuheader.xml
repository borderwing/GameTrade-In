<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/menuHeader"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        >

        <ImageView
            android:id = "@+id/menuUserPic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/userlauncher"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/menuUserPic"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/menuUserName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Username"
                android:gravity="center"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/menuCredits"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="100"
                android:gravity="center"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:text="Credits :"
                android:layout_alignEnd="@id/menuCredits"
                android:layout_alignRight="@id/menuCredits"
                android:gravity="center"
                android:textSize="15dp"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
